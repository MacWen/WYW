@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor Http
@inject IJSRuntime JSRuntime
@using BlazorStrap;
@using BlazorStrap.Extensions.BSDataTable;

@if (!ConsentGiven)
{
<div id="cookieConsent" class="alert alert-secondary alert-dismissible fade show" role="alert">
       <th scope="col">
       <p class="font-weight-normal" style="text-align:center;">Sprawdź i zaakceptuj naszą politykę prywatności i politykę "Cookie"</p>
       <a class="brn btn-outline-secondary" href="/cookie/consent">Accept</a>
        <BSCollapseItem>
                <BSCard CardType="CardType.Card">
                    <BSCard CardType="CardType.Header">
                        <BSCollapseToggle IsLink="true">Polityka Prywatności</BSCollapseToggle>
                    </BSCard>
                    <BSCollapse>
                        <BSCard CardType="CardType.Body">
                            <BSCard CardType="CardType.Text">
                                <Privacy />
                            </BSCard>
                        </BSCard>
                    </BSCollapse>
                </BSCard>
            </BSCollapseItem>
        </th>
        @*<th scope="col">
            <BSCol SM="auto" SMOffset="1">
        <BSButton Color="Color.Primary"  data-cookie-string="@cookieString" @onclick="AcceptMessage">Akceptuj</BSButton>          
        </BSCol>
        </th>*@
    </div>
}
    
    

@code {
    [CascadingParameter]
    public bool ConsentGiven { get; set;}
    
}